@{Layout = "";}


    <link rel="stylesheet" href="~/css/AdminLogin.css">

<body>
    <div class="container">
        <div class="forms-container">
            <div class="signin-signup">
                <form  asp-action="AdminLogin" class="sign-in-form">
                    <h2 class="title">ADMIN</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="text" placeholder="Kullanıcı adı" name="kullaniciAdi" />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" placeholder="Şifre" name="sifre" />
                    </div>
                    @* <input type="submit" id="btnuye" value="Login" class="btn solid" /> *@
                    <button type="submit" id="btnuye" class="btn solid" >LOGIN</button>
                    @ViewBag.AdminMessage
                    <a href="/" class="btn solid ana-sayfa">Ana Sayfa</a>
                    <p class="social-text"></p>

                </form>
            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">

                <img src="~/img/admin.png" style="filter: invert(0.2);"  class="image" alt="" />
            </div>
        </div>
    </div>
</body>

</html>




    <script src="https://kit.fontawesome.com/64d58efce2.js" crossorigin="anonymous"></script>
